<style>
  .satelliteTrack {
    position: fixed;
    left: 0;
    top: 0;
    width: 0; /* track is transform-driven */
    height: 0;
    pointer-events: none;
    z-index: 1; /* above starfield, below content */
    /* Ensure offscreen + hidden even before animations attach (avoids top-left flash) */
    transform: translate(-22vw, 34vh);
    opacity: 0;
    will-change: transform, opacity;
    animation: flyIn 14s ease-out 1s 1 forwards,
               driftAcross 60s linear 15s infinite alternate;
  }
  @keyframes flyIn {
    0% { transform: translate(-22vw, 34vh); opacity: 0; }
    30% { opacity: 1; }
    100% { transform: translate(58vw, 14vh); opacity: 1; }
  }
  @keyframes driftAcross {
    0% { transform: translate(58vw, 14vh); }
    50% { transform: translate(74vw, 12vh); }
    100% { transform: translate(86vw, 18vh); }
  }

  .satellite {
    width: 64px;
    height: 64px;
    filter: drop-shadow(0 2px 10px rgba(84,72,200,0.45));
    animation: float 32s ease-in-out infinite, wobble 60s ease-in-out infinite;
    transform-origin: 50% 50%;
  }
  @keyframes float {
    0%, 100% { transform: translate(0,0); }
    25% { transform: translate(6px, -8px); }
    50% { transform: translate(-5px, 6px); }
    75% { transform: translate(4px, -4px); }
  }
  @keyframes wobble {
    0%, 100% { rotate: 0deg; }
    50% { rotate: 5deg; }
  }

  @media (prefers-reduced-motion: reduce) {
    .satelliteTrack { animation: none; transform: translate(58vw, 14vh); }
    .satellite { animation: none; }
  }
</style>

<div class="satelliteTrack" aria-hidden="true">
  <svg class="satellite" viewBox="0 0 96 64" aria-hidden="true">
    <defs>
      <linearGradient id="panel" x1="0" y1="0" x2="1" y2="0">
        <stop offset="0%" stop-color="#6aa3ff"/>
        <stop offset="100%" stop-color="#a5b4fc"/>
      </linearGradient>
      <linearGradient id="body" x1="0" y1="0" x2="0" y2="1">
        <stop offset="0%" stop-color="#8a7df2"/>
        <stop offset="100%" stop-color="#5448c8"/>
      </linearGradient>
    </defs>
    <!-- solar panels -->
    <rect x="2" y="20" width="26" height="24" rx="3" fill="url(#panel)" opacity="0.85" />
    <rect x="68" y="20" width="26" height="24" rx="3" fill="url(#panel)" opacity="0.85" />
    <!-- connectors -->
    <rect x="28" y="30" width="40" height="4" fill="rgba(255,255,255,0.6)" />
    <!-- body -->
    <rect x="38" y="16" width="20" height="32" rx="6" fill="url(#body)" stroke="#ffffff" stroke-opacity="0.35" />
    <!-- antenna -->
    <rect x="48" y="8" width="2" height="8" fill="#ffffff" opacity="0.8" />
    <circle cx="49" cy="7" r="2" fill="#ffffff" opacity="0.9" />
  </svg>
</div>

