<style>
  .hero {
    position: relative;
    display: grid;
    place-items: center;
    min-height: 80vh;
    text-align: center;
    padding: 6rem 1.25rem 4rem;
  }
  .container { max-width: 960px; margin: 0 auto; padding: 0 1rem; }
  .title {
    color: var(--white);
    font-weight: 800;
    letter-spacing: 0.02em;
    font-size: clamp(2.75rem, 6vw, 5rem);
    line-height: 1.1;
    margin: 0 0 0.5rem 0;
  }
  .whoami {
    list-style: none;
    padding: 0;
    margin: 0.75rem 0 0 0;
  }
  .whoami li {
    color: var(--lavender);
    font-size: clamp(1.05rem, 2.1vw, 1.35rem);
    margin: 0.4rem 0;
  }
  .icons {
    margin-top: 1.75rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  .iconLink {
    color: var(--pale-gray);
    display: inline-flex;
    width: 44px;
    height: 44px;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.18);
    text-decoration: none;
    transition: border-color .2s ease, color .2s ease, background .2s ease;
    background: rgba(255,255,255,0.03);
  }
  .iconLink:hover { color: var(--white); border-color: rgba(255,255,255,0.4); background: rgba(255,255,255,0.06); }
  .iconLink svg { width: 22px; height: 22px; fill: currentColor; }

  .cta {
    margin-top: 1.25rem;
  }
  .button {
    color: var(--pale-gray);
    text-decoration: none;
    border: 1px solid rgba(255,255,255,0.25);
    border-radius: 999px;
    padding: 0.6rem 1rem;
    display: inline-block;
  }
  .button:hover { border-color: rgba(255,255,255,0.45); color: var(--white); }

  .legacyLinks {
    margin-top: 1.75rem;
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .legacyLinks a { color: var(--pale-gray); opacity: 0.8; text-decoration: none; }
  .legacyLinks a:hover { opacity: 1; text-decoration: underline; }
</style>

