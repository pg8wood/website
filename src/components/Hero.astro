---
const name = 'Patrick Gatewood';
---
<style>
  .hero {
    position: relative;
    display: grid;
    place-items: center;
    height: 50vh;
    text-align: center;
    margin-top: 20vh;
    margin-bottom: 10vh;
    padding: 0rem 1.25rem 0rem;
    z-index: 3; /* ensure hero sits above satellite/starfield */
  }
  .container { max-width: 960px; margin: 0 auto; padding: 0 1rem; }
  .title {
    color: var(--white);
    font-weight: 800;
    letter-spacing: 0.02em;
    font-size: clamp(2.75rem, 6vw, 5rem);
    line-height: 1.1;
    margin: 0 0 0.5rem 0;
  }
  .subline {
    color: rgba(230,237,243,0.7); /* pale-gray at ~70% */
    font-size: clamp(0.95rem, 1.8vw, 1.1rem);
    font-style: italic; /* whisper */
    margin: .15rem 0 .1rem;
  }
  .terminalline {
    color: rgba(139, 233, 164, 0.7); /* subtle terminal green */
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size: clamp(0.9rem, 1.6vw, 1.05rem);
    font-weight: 400;
    letter-spacing: 0.01em;
    margin: .1rem 0 0;
  }
  .whoami {
    list-style: none;
    padding: 0;
    margin: 0.75rem 0 0 0;
  }
  .whoami li {
    color: var(--lavender);
    font-size: clamp(1.05rem, 2.1vw, 1.35rem);
    margin: 0.4rem 0;
  }
  .icons {
    margin-top: 1.75rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
    position: relative;
  }
  .iconLink {
    color: var(--pale-gray);
    display: inline-flex;
    width: 44px;
    height: 44px;
    align-items: center;
    justify-content: center;
    border-radius: 999px;
    border: 1px solid rgba(255,255,255,0.18);
    text-decoration: none;
    transition: border-color .2s ease, color .2s ease, background .2s ease;
    background: rgba(255,255,255,0.03);
    animation-timing-function: ease-in-out;
    animation-iteration-count: infinite;
  }
  .iconLink:hover { color: var(--white); border-color: rgba(255,255,255,0.4); background: rgba(255,255,255,0.06); }
  .iconLink svg { width: 22px; height: 22px; fill: currentColor; }

  /* Gentle orbital/bobble motion with staggered timings */
  .icons .iconLink:nth-child(1) { animation-name: bobbleA; animation-duration: 18s; animation-delay: .2s; }
  .icons .iconLink:nth-child(2) { animation-name: bobbleB; animation-duration: 22s; animation-delay: 1.1s; }
  .icons .iconLink:nth-child(3) { animation-name: bobbleC; animation-duration: 26s; animation-delay: .6s; }

  @keyframes bobbleA {
    0%, 100% { transform: translate(0,0) rotate(0deg); }
    20% { transform: translate(3px, -4px) rotate(2deg); }
    40% { transform: translate(-2px, -1px) rotate(-1deg); }
    60% { transform: translate(-3px, 3px) rotate(-2deg); }
    80% { transform: translate(2px, 2px) rotate(1deg); }
  }
  @keyframes bobbleB {
    0%, 100% { transform: translate(0,0) rotate(0deg); }
    25% { transform: translate(-4px, 3px) rotate(-2deg); }
    50% { transform: translate(2px, -2px) rotate(1deg); }
    75% { transform: translate(3px, 2px) rotate(2deg); }
  }
  @keyframes bobbleC {
    0%, 100% { transform: translate(0,0) rotate(0deg); }
    30% { transform: translate(2px, 3px) rotate(1.5deg); }
    60% { transform: translate(-3px, 1px) rotate(-1.5deg); }
  }

  .cta {
    margin-top: 1.25rem;
  }
  .button {
    color: var(--pale-gray);
    text-decoration: none;
    border: 1px solid rgba(255,255,255,0.25);
    border-radius: 999px;
    padding: 0.6rem 1rem;
    display: inline-block;
  }
  .button:hover { border-color: rgba(255,255,255,0.45); color: var(--white); }

  .legacyLinks {
    margin-top: 1.75rem;
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  .legacyLinks a { color: var(--pale-gray); opacity: 0.8; text-decoration: none; }
  .legacyLinks a:hover { opacity: 1; text-decoration: underline; }

  @media (prefers-reduced-motion: reduce) {
    .icons .iconLink { animation: none !important; }
  }
</style>

